<UserControl x:Class="financemanager.CloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:financemanager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Button x:Name="tableCloseButton"
            Background="Transparent"
            Click="tableCloseButton_Click"
            Margin="5,0,0,0"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">

        <Path Data="M1,9 L9,1 M1,1 L9,9" Stroke="Black" StrokeThickness="2"></Path>
    </Button>
            
</UserControl>
